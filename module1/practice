import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
       int space=2;
        int n=scn.nextInt();
        for(int j=1;j<=n;j++)
        
        {   for( int k=1 ;k<=space  ;k++){
             System.out.print("\t");
            }
             for( int i=1 ;i<=n/2+1;i++  ) {
                 System.out.print("*\t");
                 
             }
            System.out.println();
        }
        

    }
}